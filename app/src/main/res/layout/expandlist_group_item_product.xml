<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.sarthaksharma.zomato.MyCustomMTextViewBold
            android:id="@+id/lblExListViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>

        <com.sarthaksharma.zomato.MyCustomMTextViewSemiBold
            android:id="@+id/lblNoOfPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/lblExListViewHeading"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/imgArrowDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

</RelativeLayout>