<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgFingerPrint"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%"
        android:background="@drawable/ic_fingerprint"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"/>

    <com.sarthaksharma.zomato.MyCustomOSTextViewLight
        android:id="@+id/lblHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:text="Place your finger on the finger print sensor to Log in"
        android:layout_below="@+id/imgFingerPrint"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="2%"
        />

    <com.sarthaksharma.zomato.MyCustomOSTextViewSemiBold
        android:id="@+id/lblCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHeading"
        android:textSize="12sp"
        android:paddingBottom="20dp"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Cancel"
        />

</android.support.percent.PercentRelativeLayout>