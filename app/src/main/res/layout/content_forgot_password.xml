<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sarthaksharma.zomato.ForgotPasswordActivity"
    tools:showIn="@layout/activity_forgot_password">

    <com.sarthaksharma.zomato.MyCustomOSEditTextSemiBold
        android:id="@+id/txtForgotPasswordEmail"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        app:layout_marginTopPercent="3%"/>

    <com.sarthaksharma.zomato.MyCustomOSButtonSemiBold
        android:id="@+id/btnSignUp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        android:onClick="fncForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtForgotPasswordEmail"
        app:layout_marginTopPercent="2%"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/btnTextSize"
        android:textAllCaps="false"
        android:background="@drawable/ic_signup_btn_bg"/>

</android.support.percent.PercentRelativeLayout>
